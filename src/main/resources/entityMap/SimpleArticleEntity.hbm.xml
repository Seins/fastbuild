<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.fastbuild.entity.SimpleArticleEntity" table="simple_article" schema="" catalog="fastbuild">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar" length="40"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar"/>
        </property>
        <property name="detail">
            <column name="detail" sql-type="varchar" length="500"/>
        </property>
    </class>
</hibernate-mapping>